<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFinalActivity">


    <include
        android:id="@+id/toolbarsignup"
        layout="@layout/toolbarsignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarsignup"
        android:layout_centerHorizontal="true"
        android:textColor="@color/originalBlack"
        android:layout_marginTop="30dip"
        android:text="Create your account"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:inputType="textPersonName"
        android:layout_marginTop="100dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView3"
        android:text="" />
    <EditText
        android:id="@+id/edtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:inputType="phone"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edtPersonName"
        android:text="" />

    <EditText
        android:id="@+id/edtDateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:inputType="date"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edtPhoneNumber"
        android:text="" />

    <TextView
        android:id="@+id/txtSignUp_in_Final"
        android:layout_width="350dip"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:gravity="center"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_below="@id/edtDateOfBirth"
        android:layout_marginTop="100dip"
        android:background="@drawable/radius"
        android:padding="5dp"
        />


</RelativeLayout>